<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/light_gray_ultra"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/avatar"
        android:text="Haris Muharemovic"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/avatar"
        android:text="Typed some comments here"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comment_detals"
        android:layout_below="@+id/text"
        android:layout_toRightOf="@+id/avatar"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical">

        <TextView
            android:text="4 hours ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_published"
            android:layout_below="@+id/username"
            android:layout_toRightOf="@+id/avatar"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/avatar"
            android:text="&#183;"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_toRightOf="@+id/avatar"
            android:text="0"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:srcCompat="@drawable/ic_thumb_up"
            android:id="@+id/imageView5"
            android:layout_marginLeft="3dp"
            android:tint="@color/colorAccent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/avatar"
            android:text="&#183;"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username"
                android:layout_toRightOf="@+id/avatar"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="Like"
                android:textSize="12sp"/>

        </LinearLayout>

        <!--<LinearLayout
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username"
                android:layout_toRightOf="@+id/avatar"
                android:paddingLeft="6dp"
                android:paddingRight="2dp"
                android:text="Share"
                android:textSize="12sp"/>

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:padding="2dp"
                app:srcCompat="@drawable/ic_"/>
        </LinearLayout>-->

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/comment_detals"
        android:layout_toRightOf="@+id/avatar"
        android:background="#f5f5f5"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">
    </LinearLayout>

</RelativeLayout>